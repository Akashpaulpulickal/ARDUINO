# Import necessary libraries
import RPi.GPIO as GPIO
import time

# Set up GPIO mode
GPIO.setmode(GPIO.BCM)

# Define GPIO pins
LDR_PIN = 17
BUZZER_PIN = 18

# Set up GPIO pins
GPIO.setup(LDR_PIN, GPIO.IN)
GPIO.setup(BUZZER_PIN, GPIO.OUT)

try:
    while True:
        # Read the LDR sensor value
        ldr_value = GPIO.input(LDR_PIN)
        
        if ldr_value == 0:  # Laser beam is interrupted
            GPIO.output(BUZZER_PIN, GPIO.HIGH)
            print("Intruder detected!")
        else:
            GPIO.output(BUZZER_PIN, GPIO.LOW)
        
        # Wait for a short period before checking again
        time.sleep(0.1)

except KeyboardInterrupt:
    print("Program terminated")

finally:
    # Clean up GPIO settings
    GPIO.cleanup()

# Connections:
# - VCC pin of the laser module to the 3.3V pin of the Raspberry Pi.
# - GND pin of the laser module to the GND pin of the Raspberry Pi.
# - One end of the LDR to 3.3V pin of the Raspberry Pi.
# - The other end of the LDR to a 10kΩ resistor and GPIO pin 17 (BCM numbering) of the Raspberry Pi.
# - The other end of the 10kΩ resistor to the GND pin of the Raspberry Pi.
# - Positive pin of the buzzer to GPIO pin 18 (BCM numbering) of the Raspberry Pi.
# - Negative pin of the buzzer to the GND pin of the Raspberry Pi.
